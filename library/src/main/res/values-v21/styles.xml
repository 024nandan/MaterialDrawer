        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MaterialDrawerTheme.Light.ActionBar" parent="MaterialDrawerTheme.Light">
        <item name="windowActionBar">true</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="MaterialDrawerTheme.Light.ActionBar.TranslucentStatus" parent="MaterialDrawerTheme.Light.ActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!-- LIGHT DARK ACTIONBAR -->
    <style name="MaterialDrawerTheme.Light.DarkActionBar" parent="MaterialDrawerBaseTheme.Light.DarkActionBar">
        <!-- ...and here we setting appcompat’s color theming attrs for lollipop devices -->
