<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/material_drawer_secondary"
             android:paddingRight="@dimen/material_drawer_vertical_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/material_drawer_secondary_icon"
        android:layout_height="@dimen/material_drawer_secondary_icon"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/material_drawer_vertical_padding"/>

    <TextView
        android:id="@+id/name"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/material_drawer_vertical_content_padding"
        android:textSize="@dimen/material_drawer_secondary_text"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/material_drawer_secondary_text"/>

</FrameLayout>